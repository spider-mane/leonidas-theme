{
  "name": "leonidas/leonidas-theme",
  "type": "project",
  "description": "Starter package for creating a Leonidas based WordPress theme",
  "homepage": "https://github.com/spider-mane/leonidas-theme",
  "license": "MIT",
  "authors": [
    {
      "name": "Chris Williams",
      "email": "spider.mane.web@gmail.com",
      "homepage": "https://github.com/spider-mane",
      "role": "Developer"
    }
  ],
  "keywords": [
    "webtheory",
    "leonidas"
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.4 || ^8.0",
    "giggsey/libphonenumber-for-php": "^8.12",
    "guzzlehttp/psr7": "^1.6",
    "league/container": "^4.2",
    "psr/container": "^1.1",
    "symfony/asset": "^4.3",
    "symfony/polyfill-php80": "^1.23",
    "symfony/polyfill-php81": "^1.23",
    "timber/timber": "^1.19",
    "webtheory/config": "@stable",
    "webtheory/context": "@stable",
    "webtheory/facade": "@stable",
    "webtheory/html": "@stable",
    "webtheory/saveyour": "@stable"
  },
  "require-dev": {
    "composer/installers": "^1.0 || ^2.0",
    "fakerphp/faker": "^1.17",
    "filp/whoops": "^2.5",
    "friendsofphp/php-cs-fixer": "^2.15",
    "illuminate/collections": "^8.77",
    "joshtronic/php-loremipsum": "^1.0",
    "koodimonni/composer-dropin-installer": "^1.3",
    "leonidas/leonidas": "@stable",
    "maximebf/debugbar": "^1.17",
    "mockery/mockery": "^1.4",
    "monolog/monolog": "^2.0",
    "nesbot/carbon": "^2.46",
    "nunomaduro/collision": "^5.10",
    "oscarotero/env": "^2.1",
    "phpbench/phpbench": "@dev",
    "phpunit/phpunit": "^9.5",
    "phpunit/phpunit-selenium": "^9.0",
    "psy/psysh": "^0.10.7",
    "spatie/phpunit-watcher": "^1.12",
    "squizlabs/php_codesniffer": "^3.0",
    "symfony/var-dumper": "^5.4",
    "vimeo/psalm": "^4.7",
    "vlucas/phpdotenv": "^5.3",
    "voku/stringy": "^6.4",
    "webtheory/exterminate": "@stable",
    "webtheory/wp-cli-util": "@stable",
    "webtheory/wpdmc": "@stable",
    "webtheory/wpunit": "@stable",
    "wp-cli/wp-cli-bundle": "@stable",
    "wpackagist-theme/twentytwentyone": "@stable"
  },
  "autoload": {
    "psr-4": {
      "PseudoVendor\\PseudoTheme\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "bench": "vendor/bin/phpbench",
    "check": "vendor/bin/phpcs",
    "collect": "vendor/bin/var-dump-server",
    "env": "cp -n .env.example .env",
    "fix": "vendor/bin/php-cs-fixer fix --verbose",
    "hooks": "vendor/bin/captainhook",
    "inspect": "vendor/bin/psalm",
    "link": "bin/symlink-theme",
    "shell": "@wp shell",
    "test:acceptance": "vendor/bin/phpunit --testsuite acceptance",
    "test:functional": "vendor/bin/phpunit --testsuite functional",
    "test:integration": "vendor/bin/phpunit --testsuite integration",
    "test:unit": "vendor/bin/phpunit --testsuite unit",
    "test:wpunit": "vendor/bin/phpunit --testsuite wpunit",
    "watch": "vendor/bin/phpunit-watcher watch",
    "wp": "vendor/bin/wp",
    "build": [
      "@fix",
      "@check",
      "@inspect",
      "@test"
    ],
    "wp:init": [
      "@wp core download",
      "@link"
    ],
    "wp:refresh": [
      "@wp db export",
      "@wp db clean --yes",
      "@wp core install"
    ],
    "post-create-project-cmd": [
      "@wp:init",
      "bin/composer-prefill",
      "@env"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "apcu-autoloader": true,
    "sort-packages": true,
    "process-timeout": 0,
    "allow-plugins": {
      "composer/installers": true,
      "composer/package-versions-deprecated": true,
      "koodimonni/composer-dropin-installer": true
    }
  },
  "extra": {
    "installer-paths": {
      "wordpress/wp-content/plugins/{$name}": [
        "type:wordpress-plugin"
      ],
      "wordpress/wp-content/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "wordpress/wp-content/themes/{$name}/": [
        "type:wordpress-theme"
      ],
      "vendor/{$vendor}/{$name}/": [
        "type:wordpress-dropin"
      ]
    },
    "dropin-paths": {
      "wordpress/wp-content/": [],
      "wordpress/wp-content/mu-plugins": []
    }
  }
}
